<Window x:Class="symncrypt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:symncrypt"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.Resources>
        <Thickness x:Key="Margin15">15,15,15,15</Thickness>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition MinWidth="100" />
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black"
                BorderThickness="1"
                Margin="10,10,10,10"
                CornerRadius="10,10,10,10"
                Grid.Column="1" />

        <Border BorderBrush="Black"
                BorderThickness="1"
                Margin="10,10,10,10"
                CornerRadius="10,10,10,10" />
        <StackPanel Margin="{DynamicResource Margin15}">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Left"
                           Text="Input File"
                           Margin="{DynamicResource Margin15}"
                           Width="120" />
                <Button DockPanel.Dock="Right"
                        x:Name="btnBrowseInput"
                        Content="Browse"
                        HorizontalContentAlignment="Center"
                        Margin="{DynamicResource Margin15}"
                        Click="btnBrowseInput_Click" />
                <TextBox x:Name="txtInputFile"
                         TextWrapping="Wrap"
                         Text="&lt;Filename&gt;"
                         Width="Auto"
                         MinWidth="200"
                         Margin="{DynamicResource Margin15}" />

            </DockPanel>
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Left"
                           Text="Output File"
                           Margin="{DynamicResource Margin15}"
                           Width="120" />
                <Button DockPanel.Dock="Right"
                        x:Name="btnBrowseOutput"
                        Content="Browse"
                        HorizontalContentAlignment="Center"
                        Margin="{DynamicResource Margin15}" />
                <TextBox x:Name="txtOutputFile"
                         TextWrapping="Wrap"
                         Text="&lt;Filename&gt;"
                         Width="Auto"
                         MinWidth="200"
                         Margin="{DynamicResource Margin15}" />
            </DockPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap"
                           Text="Algoritm"
                           Margin="{DynamicResource Margin15}"
                           Width="120" />
                <ComboBox Width="120"
                          Margin="{DynamicResource Margin15}"
                          SelectedIndex="0">
                    <ComboBoxItem Content="DES" />
                    <ComboBoxItem Content="TripeDES" />
                    <ComboBoxItem Content="Rijndael" />
                    <ComboBoxItem Content="RC2" />
                    <ComboBoxItem Content="AES" />
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap"
                           Text="Mod de operare"
                           Margin="{DynamicResource Margin15}"
                           Width="120" />
                <ComboBox x:Name="cmbModOperare"
                          Width="120"
                          Margin="{DynamicResource Margin15}"
                          SelectedIndex="0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap"
                           Text="Padding"
                           Margin="{DynamicResource Margin15}"
                           Width="120" />
                <ComboBox x:Name="cmbPadding"
                          Width="120"
                          Margin="{DynamicResource Margin15}"
                          SelectedIndex="0" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center">
            <Button x:Name="btnEncrypt"
                    Content="Encrypt"
                    Margin="{DynamicResource Margin15}"
                    Click="btnEncrypt_Click" />
            <Button x:Name="btnDecrypt"
                    Content="Decrypt"
                    Margin="15,15,15,15"
                    Click="btnDecrypt_Click" />
        </StackPanel>

    </Grid>
</Window>
